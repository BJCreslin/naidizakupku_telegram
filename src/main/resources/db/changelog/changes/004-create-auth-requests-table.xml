<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="004-create-auth-requests-table" author="system">
        <comment>Создание таблицы для хранения запросов аутентификации</comment>
        
        <createTable tableName="auth_requests">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="trace_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            
            <column name="telegram_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
            <column name="requested_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Создание индексов для оптимизации запросов -->
        <createIndex tableName="auth_requests" indexName="idx_auth_requests_trace_id">
            <column name="trace_id"/>
        </createIndex>
        
        <createIndex tableName="auth_requests" indexName="idx_auth_requests_telegram_user_id">
            <column name="telegram_user_id"/>
        </createIndex>
        
        <createIndex tableName="auth_requests" indexName="idx_auth_requests_requested_at">
            <column name="requested_at"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>
