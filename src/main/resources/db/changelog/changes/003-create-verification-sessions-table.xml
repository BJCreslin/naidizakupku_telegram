<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-verification-sessions-table" author="naidizakupku">
        <comment>Создание таблицы для сессий верификации кодов</comment>
        
        <createTable tableName="verification_sessions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="correlation_id" type="VARCHAR(36)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="telegram_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(7)">
                <constraints nullable="false"/>
            </column>
            <column name="browser_info" type="JSON">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Индексы для оптимизации запросов -->
        <createIndex tableName="verification_sessions" indexName="idx_verification_correlation_id">
            <column name="correlation_id"/>
        </createIndex>
        
        <createIndex tableName="verification_sessions" indexName="idx_verification_telegram_user_id">
            <column name="telegram_user_id"/>
        </createIndex>
        
        <createIndex tableName="verification_sessions" indexName="idx_verification_status_created">
            <column name="status"/>
            <column name="created_at"/>
        </createIndex>
        
        <!-- Комментарии к таблице и колонкам -->
        <sql>
            COMMENT ON TABLE verification_sessions IS 'Сессии верификации кодов авторизации';
            COMMENT ON COLUMN verification_sessions.correlation_id IS 'Уникальный идентификатор корреляции для связывания запросов и ответов';
            COMMENT ON COLUMN verification_sessions.telegram_user_id IS 'ID пользователя в Telegram';
            COMMENT ON COLUMN verification_sessions.code IS 'Код авторизации (7 символов)';
            COMMENT ON COLUMN verification_sessions.browser_info IS 'Информация о браузере в формате JSON';
            COMMENT ON COLUMN verification_sessions.status IS 'Статус сессии: PENDING, CONFIRMED, REVOKED';
            COMMENT ON COLUMN verification_sessions.created_at IS 'Время создания сессии';
            COMMENT ON COLUMN verification_sessions.updated_at IS 'Время последнего обновления сессии';
        </sql>
    </changeSet>

</databaseChangeLog>
