<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-remove-user-fields" author="system">
        <!-- Удаляем индексы для полей, которые будем удалять -->
        <dropIndex tableName="users" indexName="idx_users_username"/>
        
        <!-- Удаляем колонки -->
        <dropColumn tableName="users" columnName="username"/>
        <dropColumn tableName="users" columnName="first_name"/>
        <dropColumn tableName="users" columnName="last_name"/>
    </changeSet>

</databaseChangeLog>
