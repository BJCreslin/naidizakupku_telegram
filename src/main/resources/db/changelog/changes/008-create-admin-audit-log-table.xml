<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="008-create-admin-audit-log-table" author="system">
        <comment>Создание таблицы для аудита действий админов</comment>
        
        <createTable tableName="admin_audit_log">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="admin_user_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            
            <column name="action" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="entity_type" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            
            <column name="entity_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            
            <column name="details" type="TEXT">
                <constraints nullable="true"/>
            </column>
            
            <column name="ip_address" type="VARCHAR(45)">
                <constraints nullable="true"/>
            </column>
            
            <column name="user_agent" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Внешний ключ на admin_users (nullable, так как может быть системное действие) -->
        <addForeignKeyConstraint
                baseTableName="admin_audit_log"
                baseColumnNames="admin_user_id"
                constraintName="fk_admin_audit_log_admin_user_id"
                referencedTableName="admin_users"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
        
        <!-- Создание индексов для оптимизации запросов -->
        <createIndex tableName="admin_audit_log" indexName="idx_admin_audit_log_admin_user_id">
            <column name="admin_user_id"/>
        </createIndex>
        
        <createIndex tableName="admin_audit_log" indexName="idx_admin_audit_log_action">
            <column name="action"/>
        </createIndex>
        
        <createIndex tableName="admin_audit_log" indexName="idx_admin_audit_log_entity">
            <column name="entity_type"/>
            <column name="entity_id"/>
        </createIndex>
        
        <createIndex tableName="admin_audit_log" indexName="idx_admin_audit_log_created_at">
            <column name="created_at"/>
        </createIndex>
        
    </changeSet>

</databaseChangeLog>

